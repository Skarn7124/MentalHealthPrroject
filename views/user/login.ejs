<%-include("partials/header")-%>
<link rel="stylesheet" href="/public/css/login.css">
<section id ="login">
    <div class="wrapper">
        <div class="logreg-box">

            <!-- login-form -->

            <div class="form-box login classname">
                <div class="logreg-title">
                    <h2>Login</h2>
                    <p>Please login to get counselling</p>
                </div>

                <form action="#">
                    <div class="input-box">
                        <span class="icon"><i class='bx bxl-gmail'></i></span>
                        <input type="email" required name="" id="">
                        <label for="">Email</label>
                    </div>
                    <div class="input-box">
                        <span class="icon"><i class='bx bxs-lock-alt'></i></span>
                        <input type="password" required name="" id="">
                        <label for="">Password</label>
                    </div>

                    <div class="remember-forgot">
                        <label><input type="checkbox" name="" id="">Remember me</label>
                        <a href="#">Forgot Password?</a>
                    </div>

                    <button type="submit" class="btn">Login</button>

                    <div class="logreg-link">
                        Don't have an account? <a href=# class="register-link"> Register</a>
                    </div>
                </form>
                <div class="media-options">
                    <a href="#">
                        <i class='bx bxl-google'></i>
                        <span>
                            Login with Google
                        </span>
                    </a>
                </div>
            </div>

            <!-- Register-form -->
            
            <div class="form-box register classname">
                <div class="logreg-title">
                    <h2>Registration</h2>
                    <p>Please provide your correct details</p>
                </div>
            
                <form action="#">
                    <div class="input-box">
                        <span class="icon"><i class='bx bx-user-circle'></i></span>
                        <input type="text" required name="" id="">
                        <label for="">Full Name</label>
                    </div>
                    <div class="input-box">
                        <span class="icon"><i class='bx bx-calendar'></i></i></span>
                        <input type="number" required name="" id="">
                        <label for="">Age</label>
                    </div>
                    <div class="input-box">
                        <span class="icon"><i class='bx bxs-contact'></i></span>
                        <input type="number" required name="" id="">
                        <label for="">Contact No.</label>
                    </div>
                    <div class="input-box">
                        <span class="icon"><i class='bx bxl-gmail'></i></span>
                        <input type="email" required name="" id="">
                        <label for="">Email</label>
                    </div>
                    <div class="input-box">
                        <span class="icon"><i class='bx bxs-lock-alt'></i></span>
                        <input type="password" required name="" id="">
                        <label for="">New Password</label>
                    </div>
                    <div class="input-box">
                        <span class="icon"><i class='bx bxs-lock-alt'></i></span>
                        <input type="password" required name="" id="">
                        <label for="">Confirm Password</label>
                    </div>
            
                    <div class="remember-forgot">
                        <label><input type="checkbox" name="" id="">I agree to terms and conditions</label>
                        <a href="#">Forgot Password?</a>
                    </div>
            
                    <button type="submit" class="btn">Register</button>
            
                    <div class="logreg-link">
                        Already have an account? <a href=# class="login-link"> Login</a>
                    </div>
                </form>
                <div class="media-options">
                    <a href="#">
                        <i class='bx bxl-google'></i>
                        <span>
                            Login with Google
                        </span>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="back-img slideIn">
        <img src="/public/images/human.png" alt="">
    </div>
</section>

<script src="/public/javascript/log-reg.js"></script>

<%-include("partials/footer")-%>